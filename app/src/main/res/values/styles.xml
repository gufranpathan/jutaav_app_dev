    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/selector_tab_indicator</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="animationMode">slide</item>
        <item name="tabSelectedTextColor">@color/color_131E63</item>
    </style>

    <style name="ShapeAppearance.MyApp.MaterialCardView.TasksRound" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dp_10</item>
        <item name="cornerSizeTopRight">@dimen/dp_3</item>
