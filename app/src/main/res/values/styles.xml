<resources>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="ProThemeOrange" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Toolbar theme. -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:popupMenuStyle">@color/colorPrimaryDark</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#1976d2</item>
        <item name="colorControlNormal">#004ba0</item>
        <item name="colorControlActivated">#63a4ff</item>
    </style>

    <style name="SwitchCompatStyle" parent="Theme.AppCompat.Light">
        <item name="android:width">50dp</item>
        <!-- active thumb & track color -->
        <item name="colorControlActivated">@color/color_131E63</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/color_FFFFFF</item>
        <!-- inactive track color -->
        <item name="android:colorForeground">@color/color_C4C4C4</item>
    </style>

    <style name="spinnerStyle" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

    <style name="InputField" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/sp_11</item>
        <item name="android:textColor">@color/color_131E63</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorHint">@color/color_8798AD</item>
        <item name="android:background">@drawable/edit_text_stroke_background</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
    </style>

    <style name="onboardingPrimaryDescriptionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/color_8798AD</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="onboardingSecondaryDescriptionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.09</item>
        <!--<item name="android:textScaleX">0.09</item>-->
    </style>

    <style name="onboardingPrimaryTitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/sp_28</item>
        <item name="android:textColor">@color/color_2E384D</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="onboardingSecondaryTitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.09</item>
        <!--<item name="android:textScaleX">0.09</item>-->
    </style>

    <style name="onboardingInputTitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_B0BAC9</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.09</item>
        <!--<item name="android:textScaleX">0.09</item>-->
    </style>

    <style name="onboardingInputField" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/color_2E384D</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorHint">@color/color_979797</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
    </style>

    <style name="onboardingprimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:backgroundTint">@color/color_131E63</item>
        <item name="cornerRadius">@dimen/dp_4</item>
    </style>

    <style name="taskPrimaryTitleBold" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.09</item>
        <!--<item name="android:textScaleX">0.09</item>-->
    </style>

    <style name="secondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/color_131E63</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/dp_8</item>
        <item name="strokeColor">@color/color_131E63</item>
        <item name="strokeWidth">@dimen/dp_1</item>
