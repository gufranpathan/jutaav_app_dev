<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.EditProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay"
                app:srcCompat="@drawable/ic_place_holder_profile_pic" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_25"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:text="Ramesh Kumar"
                android:textColor="@color/color_2E384D"
                android:textSize="@dimen/sp_15"
                app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvUserDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start"
                android:text="Booth Head, Rampur"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

            <ImageView
                android:id="@+id/ivProgressBarGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:contentDescription="@null"
                app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
                app:layout_constraintTop_toBottomOf="@+id/tvUserDesignation"
                app:srcCompat="@drawable/ic_rectangle_gray" />

            <ImageView
                android:id="@+id/ivProgressBarGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_19"
                android:contentDescription="@null"
                app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
                app:layout_constraintTop_toBottomOf="@+id/tvUserDesignation"
                app:srcCompat="@drawable/ic_rectangle_green" />

            <ImageView
                android:id="@+id/ivProgressBarTail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                app:layout_constraintEnd_toEndOf="@+id/ivProgressBarGray"
                app:layout_constraintTop_toBottomOf="@+id/tvUserDesignation"
                app:srcCompat="@drawable/ic_progress_tail" />

            <TextView
                android:id="@+id/tvUserLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:fontFamily="@font/poppins_light"
                android:gravity="start"
                android:text="Level 2"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/sp_10"
                app:layout_constraintStart_toEndOf="@+id/ivProfilePic"
                app:layout_constraintTop_toBottomOf="@+id/ivProgressBarGray" />

            <TextView
                android:id="@+id/tvNameTitle"
                style="@style/onboardingInputTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_45"
                android:text="@string/signup_orgazinattion7"
                android:textAllCaps="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUserLevel" />

            <EditText
                android:id="@+id/etName"
                style="@style/onboardingInputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_35"
                android:drawableEnd="@drawable/ic_pencil"
                android:hint="@string/str_enter_name_here"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNameTitle" />

            <TextView
                android:id="@+id/tvEmailId"
                style="@style/onboardingInputTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/loginlabel8"
                android:textAllCaps="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etName" />

            <EditText
                android:id="@+id/etEmailId"
                style="@style/onboardingInputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_35"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableEnd="@drawable/ic_pencil"
                android:hint="@string/str_enter_email_here"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEmailId" />

            <TextView
                android:id="@+id/tvFacebookId"
                style="@style/onboardingInputTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/str_facebook_id"
                android:textAllCaps="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEmailId" />

            <EditText
                android:id="@+id/etFacebookId"
                style="@style/onboardingInputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_35"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableEnd="@drawable/ic_pencil"
                android:hint="@string/str_enter_facebook_id_here"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFacebookId" />

            <TextView
                android:id="@+id/tvPasswordTitle"
                style="@style/onboardingInputTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/loginlabel11"
                android:textAllCaps="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etFacebookId" />

            <EditText
                android:id="@+id/etPassword"
                style="@style/onboardingInputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_35"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableEnd="@drawable/ic_pencil"
                android:hint="@string/str_enter_password_here"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPasswordTitle" />

            <TextView
                android:id="@+id/tvLanguageTitle"
                style="@style/onboardingInputTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/str_language"
                android:textAllCaps="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPassword" />

            <EditText
                android:id="@+id/etLanguage"
                style="@style/onboardingInputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_35"
                android:layout_marginBottom="@dimen/dp_10"
                android:drawableEnd="@drawable/ic_pencil"
                android:hint="@string/str_enter_language_here"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLanguageTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>