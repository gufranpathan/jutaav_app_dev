<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/sp_16"
    app:cardBackgroundColor="@color/color_E0E7FF"
    app:cardElevation="@dimen/dp_4"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.MyApp.MaterialCardView.TasksRound"
    card_view:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/acivTasksIcon"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/blue_stroke_rounded_unrounded"
            android:padding="@dimen/dp_10"
            android:tint="@color/color_2E5BFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_poster_user_icon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTaskTitle"
            style="@style/MyTasksTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/txt_tasks_dummy"
            app:layout_constraintStart_toEndOf="@+id/acivTasksIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTaskDescription"
            style="@style/MyTasksDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/txt_tasks_count_dummy"
            app:layout_constraintStart_toEndOf="@+id/acivTasksIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvTaskTitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>