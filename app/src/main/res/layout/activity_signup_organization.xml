<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    tools:context=".login.SignupOrganizationActivity">

    <ImageView
        android:id="@+id/imgBrandLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:contentDescription="@null"
        android:src="@drawable/splash_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSignInRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/loginlabel1"
        android:textColor="@color/color_2E384D"
        android:textSize="@dimen/sp_28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBrandLogo" />

    <TextView
        android:id="@+id/tvSignInRegisterDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="@string/signup_orgazinattion1"
        android:textAlignment="center"
        android:textColor="@color/color_8798AD"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSignInRegister" />

    <TextView
        android:id="@+id/tvOrganisationNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="@string/signup_orgazinattion2"
        android:textAllCaps="true"
        android:textColor="@color/color_B0BAC9"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSignInRegisterDescription" />

    <EditText
        android:id="@+id/etOrgName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_25"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/poppins"
        android:hint="@string/signup_orgazinattion3"
        android:imeOptions="actionDone"
        android:includeFontPadding="false"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_12"
        android:textColorHint="@color/color_979797"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrganisationNameTitle" />

    <TextView
        android:id="@+id/tvOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="@string/signup_orgazinattion5"
        android:textAllCaps="true"
        android:textColor="@color/color_B0BAC9"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etOrgName" />

    <TextView
        android:id="@+id/tvOrganisationCodeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_5"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="@string/signup_orgazinattion4"
        android:textAllCaps="true"
        android:textColor="@color/color_B0BAC9"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOr" />

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/tvOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/black"
        app:bar_enabled="false"
        app:bar_height="@dimen/dp_2"
        app:height="@dimen/dp_40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOrganisationCodeTitle"
        app:length="6"
        app:otp_box_background="@drawable/rounded_edittext"
        app:otp_text_size="@dimen/sp_24"
        app:width="@dimen/dp_40" />

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_25"
        android:background="@drawable/rounded_login_btn"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="@string/loginlabel4"
        android:textAllCaps="false"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOTP" />

</androidx.constraintlayout.widget.ConstraintLayout>